<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp"
        android:gravity="left">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/light_green_2" />

            <solid android:color="@color/transparent" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/arrow_drop_down"
        android:gravity="right">
        <color android:color="@color/transparent"/>

    </item>
</layer-list>