<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.AppCompat.Title.Custom">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.Custom.Number">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.Information">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="TextAppearance.AppCompat.Title.Information.Value">
        <item name="android:textColor">@color/red</item>

    </style>

    <style name="TextAppearance.AppCompat.Title.Custom.Header">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialog</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:colorControlNormal">@null</item>
        <item name="android:windowElevation">0dp</item>
    </style>

    <style name="BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/BottomSheetShapeAppearance</item>
        <item name="backgroundTint">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Button.Registration" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="strokeColor">@android:color/darker_gray</item>
    </style>

    <style name="BottomSheetShapeAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline6.Сustom">
        <item name="fontFamily">@font/update_gothic</item>
        <item name="android:fontFamily">@font/update_gothic</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name ="TextAppearance.TabLayout" parent="TextAppearance.MaterialComponents.Headline6.Сustom">
        <item name="fontFamily">@font/update_gothic</item>
        <item name="android:fontFamily">@font/update_gothic</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="toolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6.Сustom
        </item>
    </style>

    <style name="toolbarStyleRecipe" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/colorPrimary</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="Widget.App.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="checkedIconVisible">false</item>
        <!--        <item name="shapeAppearanceOverlay">@null</item>-->
    </style>

    <style name="Widget.App.Chip.Action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/radio_button_tint</item>
        <item name="android:textAppearance">@style/TextAppearance.RadioButton</item>
    </style>

    <style name="TextAppearance.RadioButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/update_gothic</item>
    </style>
</resources>