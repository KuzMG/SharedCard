<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">
        <TextView
            android:id="@+id/category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/TextAppearance.AppCompat.Title.Information"
            android:text="@string/category"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/category_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/TextAppearance.AppCompat.Title.Information.Value"
            tools:text="Хлебобулочное изделье"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/category_label"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/shop_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/shop"
            style="@style/TextAppearance.AppCompat.Title.Information"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_label"/>

        <TextView
            android:id="@+id/shop_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/TextAppearance.AppCompat.Title.Information.Value"
            tools:text="Магни!"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/shop_label"
            app:layout_constraintTop_toBottomOf="@id/category_label"/>
        <TextView
            android:id="@+id/price_first_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/first_price"
            style="@style/TextAppearance.AppCompat.Title.Information"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shop_label"/>

        <TextView
            android:id="@+id/price_first_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/TextAppearance.AppCompat.Title.Information.Value"
            tools:text="Срочно!"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/price_first_label"
            app:layout_constraintTop_toBottomOf="@id/shop_label"/>

        <TextView
            android:id="@+id/price_last_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/last_price"
            style="@style/TextAppearance.AppCompat.Title.Information"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/price_first_label"/>

        <TextView
            android:id="@+id/price_last_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/TextAppearance.AppCompat.Title.Information.Value"
            tools:text="Срочно!"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/price_last_label"
            app:layout_constraintTop_toBottomOf="@id/price_first_label"/>
        <TextView
            android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/date_buy"
            style="@style/TextAppearance.AppCompat.Title.Information"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/price_last_label"/>
        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/TextAppearance.AppCompat.Title.Information.Value"
            tools:text="2024-05-21 18:00"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/date_label"
            app:layout_constraintTop_toBottomOf="@id/price_last_text_view"/>
        <TextView
            android:id="@+id/first_user_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/first_user"
            style="@style/TextAppearance.AppCompat.Title.Information"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_text_view"/>
        <TextView
            android:id="@+id/first_user_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/TextAppearance.AppCompat.Title.Information.Value"
            tools:text="Михаил"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/first_user_label"
            app:layout_constraintTop_toBottomOf="@id/date_text_view"/>
        <TextView
            android:id="@+id/last_user_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/last_user"
            style="@style/TextAppearance.AppCompat.Title.Information"
            android:paddingBottom="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_user_text_view"/>
        <TextView
            android:id="@+id/last_user_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingBottom="5dp"
            style="@style/TextAppearance.AppCompat.Title.Information.Value"
            tools:text="Михаил"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/last_user_label"
            app:layout_constraintTop_toBottomOf="@id/first_user_text_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>