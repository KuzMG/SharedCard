<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp">

    <EditText
        android:id="@+id/search_edit_view"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/solid_900"
        android:hint="@string/search_bar"
        android:inputType="text"
        android:textColorHint="?attr/colorPrimary"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_sort"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_sort"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/search_bar_icon_sort"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/button_sort" />
</androidx.constraintlayout.widget.ConstraintLayout>
