<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background">

        <TextView
            android:id="@+id/dialog_add_text_view"
            style="@style/TextViewLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            tools:text="@string/dialog_add_product"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/dialog_name_edit_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/search_bar"
            tools:hint="@string/dialog_text_hint_porduct"
            android:inputType="text"
            android:padding="5dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_add_text_view" />

        <Spinner
            android:id="@+id/dialog_text_category"
            style="@style/TextViewLight"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/dialog_spinner"
            android:dropDownVerticalOffset="35dp"
            android:padding="5dp"
            android:popupBackground="@color/light_green_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_name_edit_text" />

        <LinearLayout
            android:id="@+id/dialog_linear"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_text_category">

            <EditText
                android:id="@+id/dialog_count_of_product_edit_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/search_bar"
                tools:hint="@string/dialog_text_hint_count"
                android:inputType="number"
                android:padding="5dp" />

            <Spinner
                android:id="@+id/dialog_metric"
                style="@style/TextViewLight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_spinner"
                android:dropDownVerticalOffset="35dp"
                android:popupBackground="@color/light_green_2" />

        </LinearLayout>

        <Button
            android:id="@+id/dialog_btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/dialog_add"
            android:textColor="@color/light_green_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_linear" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>